programa
{
	
	funcao inicio()
	{
		inteiro bim1, bim2, bim3, bim4, media

		bim1 = 100
		bim2 = 95
		bim3 = 87
		bim4 = 95

		media = (bim1+bim2+bim3+bim4) / 4

		escreva("\n No primeiro bimestre a nota foi de: ", bim1)
		escreva("\n No segundo bimestre a nota foi de: ", bim2)
		escreva("\n No terceiro bimestre a nota foi de: ", bim3)
		escreva("\n No quarto bimestre a nota foi de: ", bim4)
		escreva("\n A media foi de: ", media)
	}
}
